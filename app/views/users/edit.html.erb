<div class="container">
    <h2>User info</h2>
        <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "book") %>
                     prohibied this error from being saved: </h2>
                         <% @user.errors.full_messages.each do |message| %>
                             <li><%= message %></li>
                         <% end %>
                </div>
            <% end %>

            <div class="field">
                <%= f.label :name %>
                <%= f.text_field :name %>
            </div>
            <div class="field">
                <%= f.label :Image %>
                <%= f.attachment_field :profile_image %>
            </div>
            <div class="field" >
                <%= f.label :Introduction %>
                <%= f.text_area :introduction %><br>
            </div>
            <div class="action">
                <%= f.submit 'Update User' %></br>
            </div>
        <% end %>
</div>