<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <h1>User info</h1>
                <table class="table">
                    <tr>
                        <%= attachment_image_tag @user, :profile_image, :fill, 90, 90, format: 'jpeg', fallback: "no_image.jpg" %>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </table>

                <%= link_to edit_user_path(@user) do %>
                    <button type="button" class="btn btn-default btn-md btn-block">
                        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                    </button>
                <% end %>

                <div class="row">
                    <div class="col-xs-12">
                        <%= render 'books/list', book: @book %>
                    </div>
               </div>
        </div>

        <div class="col-xs-9">
            <%= render 'books/list_2', books: @books %>
        </div>
    </div>
</div>
