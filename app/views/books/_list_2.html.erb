<h1>Books</h1>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% books.each do |book| %>
            <tr>
                <td>
                    <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb"), user_path(book.user) %>
                </td>
 	              <td><%= link_to book.title, book_path(book) %></td>
 	              <td><%= book.body %></td>
 	          </tr>
        <% end %>
        <%= paginate books %>
 	  </tbody>
</table>