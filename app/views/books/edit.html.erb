<div class= "container">
    <div class= "row">
        <div class="col-md-6 col-md-offset-3">

            <h1>Editing Book</h1>
                <!-- form_for部分 -->
                <%= form_for(@book) do |f| %>
                    <% if @book.errors.any? %>
                        <div id="error_explanation">
                             <h2><%= pluralize(@book.errors.count, "book") %>
                              prohibied this error from being saved: </h2>
                            <% @book.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </div>
                    <% end %>

                    <div class="field">
                        <%= f.label :title %>
                        <%= f.text_field :title, class: "form-control" %>
                    </div>
                    <div class="field" >
                        <%= f.label :Opinion %>
                        <%= f.text_area :body, class: "form-control" %></br>
                    </div>

                    <div class="action">
                        <button type="submit" class="btn btn-primary btn-md btn-block"> Update Book</button>
                    </div>
                <% end %>
            <%= link_to 'Show', book_path(@book)%> |
            <%= link_to 'Back', books_path %>
        </div>
    </div>
</div>